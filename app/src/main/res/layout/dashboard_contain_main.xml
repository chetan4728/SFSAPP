<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Activites.GroupManager.DashboardActivity"
    tools:showIn="@layout/app_bar_main">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
          <LinearLayout
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="20dp"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:onClick="TakeSurvey"
                        android:elevation="5dp"
                        android:layout_height="170dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="100dp"
                                android:background="@drawable/ic_survey"
                                android:layout_gravity="center_horizontal"
                                android:layout_height="100dp"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_marginTop="5dp"
                                android:text="Take Survey"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:fontFamily="@font/alice"
                                android:textColor="#000"
                                android:layout_height="wrap_content"></TextView>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/loanApplication"
                        android:elevation="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="170dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="100dp"
                                android:background="@drawable/ic_loan"
                                android:layout_gravity="center_horizontal"
                                android:layout_height="100dp"></ImageView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_marginTop="5dp"
                                android:text="Loan Application"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:fontFamily="@font/alice"
                                android:textColor="#000"
                                android:layout_height="wrap_content"></TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_margin="10dp"
                  android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/meeting"
                        android:elevation="5dp"
                        android:layout_height="170dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="100dp"
                                android:background="@drawable/ic_collaboration"
                                android:layout_gravity="center_horizontal"
                                android:layout_height="100dp"></ImageView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_marginTop="5dp"
                                android:text="Meeting"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:fontFamily="@font/alice"
                                android:textColor="#000"
                                android:layout_height="wrap_content"></TextView>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                  <androidx.cardview.widget.CardView
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:id="@+id/collection"
                      android:layout_marginLeft="5dp"
                      android:elevation="5dp"
                      android:layout_height="170dp">
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_gravity="center_vertical"
                          android:layout_height="wrap_content">
                          <ImageView
                              android:layout_width="100dp"
                              android:background="@drawable/ic_collection"
                              android:layout_gravity="center_horizontal"
                              android:layout_height="100dp"></ImageView>
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_marginTop="5dp"
                              android:text="Collection"
                              android:textAlignment="center"
                              android:textStyle="bold"
                              android:textSize="16sp"
                              android:fontFamily="@font/alice"
                              android:textColor="#000"
                              android:layout_height="wrap_content"></TextView>
                      </LinearLayout>
                  </androidx.cardview.widget.CardView>
              </LinearLayout>
                <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_margin="10dp"
                  android:layout_height="match_parent">
                  <androidx.cardview.widget.CardView
                      android:layout_width="0dp"
                      android:elevation="5dp"
                      android:layout_weight="1"
                      android:layout_marginRight="5dp"
                      android:layout_height="170dp">
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_gravity="center_vertical"
                          android:layout_height="wrap_content">
                          <ImageView
                              android:layout_width="100dp"
                              android:background="@drawable/ic_location"
                              android:layout_gravity="center_horizontal"
                              android:layout_height="100dp"></ImageView>
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_marginTop="5dp"
                              android:text="Attendance"
                              android:textAlignment="center"
                              android:textStyle="bold"
                              android:textSize="16sp"
                              android:fontFamily="@font/alice"
                              android:textColor="#000"
                              android:layout_height="wrap_content"></TextView>
                      </LinearLayout>
                  </androidx.cardview.widget.CardView>

                  <androidx.cardview.widget.CardView
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_marginLeft="5dp"
                      android:elevation="5dp"
                      android:layout_height="170dp">
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_gravity="center_vertical"
                          android:layout_height="wrap_content">
                          <ImageView
                              android:layout_width="100dp"
                              android:background="@drawable/ic_business_report"
                              android:layout_gravity="center_horizontal"
                              android:layout_height="100dp"></ImageView>
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_marginTop="5dp"
                              android:text="Credit Report"
                              android:textAlignment="center"
                              android:textStyle="bold"
                              android:textSize="16sp"
                              android:fontFamily="@font/alice"
                              android:textColor="#000"
                              android:layout_height="wrap_content"></TextView>
                      </LinearLayout>
                  </androidx.cardview.widget.CardView>
              </LinearLayout>
              </LinearLayout>
    </ScrollView>
</LinearLayout>