<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/form_bg_color"
    tools:context=".Activites.GroupManager.Center.CreateCenterActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Applicant Details"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffff"

        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="#fff"
        app:cardMaxElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_height="match_parent">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Enter Applicant Name"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:layout_marginTop="10dp"
                    android:id="@+id/applicant_name"
                    android:gravity="top"
                    android:padding="5dp"
                    android:layout_height="wrap_content">

                </EditText>
                <ImageView
                    android:layout_width="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/qr_scan"
                    android:background="@drawable/ic_baseline_qr_code_scanner_24"
                    android:layout_height="35dp"></ImageView>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Enter Applicant Father Name"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />
            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/border"
                android:layout_marginTop="10dp"
                android:id="@+id/applicant_father_name"
                android:gravity="top"
                android:padding="5dp"
                android:layout_height="wrap_content">

            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Gender"
                android:layout_marginTop="10dp"

                android:textStyle="bold"
                />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:weightSum="1"
                android:orientation="horizontal"
                android:id="@+id/approval"
                >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="16sp"
                    android:tag="male"
                    android:id="@+id/male"
                    android:checked="false"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/female"
                    android:textSize="16sp"
                    android:tag="female"
                    android:checked="true"
                  />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Applicant DOB"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:gravity="top"
                android:id="@+id/dob"
                android:clickable="true"
                android:editable="false"
                android:focusable="false"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:layout_height="wrap_content">

            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Enter Applicant Age"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />
            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/border"
                android:layout_marginTop="10dp"
                android:id="@+id/age"
                android:gravity="top"
                android:padding="5dp"
                android:layout_height="wrap_content">

            </EditText>




        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Applicant Address Details"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffff"

        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="#fff"
        app:cardMaxElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_height="match_parent">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Enter Applicant Mobile No."
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />
            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/border"
                android:layout_marginTop="10dp"
                android:id="@+id/applicant_mob_no"
                android:gravity="top"
                android:inputType="number"
                android:padding="5dp"
                android:layout_height="wrap_content">

            </EditText>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Enter Address"
                android:layout_marginTop="10dp"

                android:textStyle="bold"
                />
            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/border"
                android:layout_marginTop="10dp"
                android:id="@+id/address"

                android:layout_height="80dp"
                android:inputType="text|textMultiLine"
                android:gravity="top"
                >

            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Enter Taluka/City"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:gravity="top"
                android:id="@+id/tq"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:layout_height="wrap_content">

            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Enter District"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />
            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/border"
                android:layout_marginTop="10dp"
                android:id="@+id/dist"
                android:gravity="top"
                android:padding="5dp"
                android:layout_height="wrap_content">

            </EditText>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Enter State"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />
            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/border"
                android:layout_marginTop="10dp"
                android:id="@+id/state"
                android:gravity="top"
                android:padding="5dp"
                android:layout_height="wrap_content">

            </EditText>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Enter Pincode"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />
            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/border"
                android:layout_marginTop="10dp"
                android:id="@+id/pincode"
                android:gravity="top"
                android:inputType="number"
                android:maxLength="6"
                android:padding="5dp"
                android:layout_height="wrap_content">

            </EditText>




        </LinearLayout>

    </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Applicant Other Details"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#ffff"

            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="#fff"
            app:cardMaxElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Enter UID/ Aadhar No"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:background="@drawable/border"
                    android:layout_marginTop="10dp"
                    android:id="@+id/uid_no"
                    android:inputType="number"
                    android:gravity="top"
                    android:padding="5dp"
                    android:layout_height="wrap_content">

                </EditText>


                <com.jaiselrahman.hintspinner.HintSpinner
                    android:id="@+id/center_name"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"

                    />

                <com.jaiselrahman.hintspinner.HintSpinner
                    android:id="@+id/group_name"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"

                    />






                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Created By"
                    android:layout_marginTop="10dp"

                    android:textStyle="bold"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:background="@drawable/border_disable"
                    android:layout_marginTop="10dp"
                    android:gravity="top"
                    android:focusable="false"
                    android:padding="5dp"
                    android:id="@+id/created_by"
                    android:layout_height="wrap_content">

                </EditText>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Created Date"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:focusable="false"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_disable"
                    android:gravity="top"
                    android:id="@+id/created_date"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content">

                </EditText>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Branch Name"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:background="@drawable/border_disable"
                    android:layout_marginTop="10dp"
                    android:id="@+id/branch_office"
                    android:gravity="top"
                    android:focusable="false"
                    android:padding="5dp"
                    android:layout_height="wrap_content">

                </EditText>




            </LinearLayout>

        </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:text="Back"
            android:layout_weight="1"
            android:padding="10dp"

            android:background="#fff"
            android:id="@+id/back"
            android:textSize="18sp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="#F4511E"
            android:layout_height="50dp"></Button>

        <Button
            android:layout_width="0dp"
            android:text="Next"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="#fff"
            android:id="@+id/next"
            android:textSize="18sp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="#F4511E"
            android:layout_height="50dp"></Button>

    </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>