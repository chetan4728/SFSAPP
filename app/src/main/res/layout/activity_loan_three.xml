<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/form_bg_color"
    tools:context=".Activites.GroupManager.LoanApplication.FormFragment.LoanActivityThree">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cash Flow Part 2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#ffff"

                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#fff"
                app:cardMaxElevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_height="match_parent">



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="No Of dependant ?"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/border"
                            android:layout_marginTop="10dp"
                            android:id="@+id/no_of_dep"
                            android:inputType="number"
                            android:gravity="top"
                            android:padding="5dp"
                            android:layout_height="wrap_content">

                        </EditText>

                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Household Income"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_marginTop="10dp"
                        android:id="@+id/house_hold_income"
                        android:inputType="number"
                        android:gravity="top"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="What is your Current Profession"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"

                        android:layout_marginTop="10dp"
                        android:background="@drawable/border"
                        android:gravity="top"
                        android:id="@+id/current_profession"

                        android:layout_marginBottom="10dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="If you have lottery 1 Lakh what will you di ?"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_marginTop="10dp"
                        android:id="@+id/lottery"
                        android:gravity="top"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Spouse Name"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_marginTop="10dp"
                        android:gravity="top"
                        android:id="@+id/spouse_name"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Income of this month"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_marginTop="10dp"
                        android:gravity="top"
                        android:id="@+id/income_of_this_month"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>





                </LinearLayout>

            </androidx.cardview.widget.CardView>








            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dp"
                    android:text="Back"
                    android:layout_weight="1"
                    android:padding="10dp"

                    android:background="#fff"
                    android:id="@+id/back"
                    android:textSize="18sp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="#F4511E"
                    android:layout_height="50dp"></Button>

                <Button
                    android:layout_width="0dp"
                    android:text="Next"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="#fff"
                    android:id="@+id/next"
                    android:textSize="18sp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="#F4511E"
                    android:layout_height="50dp"></Button>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>