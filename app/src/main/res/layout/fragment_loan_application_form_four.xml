<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/form_bg_color"
    tools:context=".Activites.GroupManager.Center.CreateCenterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#fff"
                app:cardMaxElevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_height="match_parent">


                    <com.jaiselrahman.hintspinner.HintSpinner
                        android:id="@+id/loan_cycle"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"

                        />

                    <com.jaiselrahman.hintspinner.HintSpinner
                        android:id="@+id/marital_status"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"

                        />


                    <com.jaiselrahman.hintspinner.HintSpinner
                        android:id="@+id/religion"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"

                        />

                    <com.jaiselrahman.hintspinner.HintSpinner
                        android:id="@+id/cast"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"

                        />




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Co-Applicant Name"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:focusable="false"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border"
                        android:gravity="top"
                        android:id="@+id/co_name"
                        android:layout_marginBottom="10dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Co-Applicant Dob"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:focusable="false"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border"
                        android:gravity="top"
                        android:id="@+id/co_dob"
                        android:layout_marginBottom="10dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Name 1"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:focusable="false"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border"
                        android:gravity="top"
                        android:id="@+id/family_name1"
                        android:layout_marginBottom="10dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>

                    <com.jaiselrahman.hintspinner.HintSpinner
                        android:id="@+id/family_relation1"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"

                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Name 2"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:focusable="false"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border"
                        android:gravity="top"
                        android:id="@+id/family_name2"
                        android:layout_marginBottom="10dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>

                    <com.jaiselrahman.hintspinner.HintSpinner
                        android:id="@+id/family_relation2"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"

                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Name 3"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:focusable="false"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border"
                        android:gravity="top"
                        android:id="@+id/family_name3"
                        android:layout_marginBottom="10dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>

                    <com.jaiselrahman.hintspinner.HintSpinner
                        android:id="@+id/family_relation3"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Name 4"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:focusable="false"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border"
                        android:gravity="top"
                        android:id="@+id/family_name4"
                        android:layout_marginBottom="10dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>

                    <com.jaiselrahman.hintspinner.HintSpinner
                        android:id="@+id/family_relation4"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Email ID"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:focusable="false"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border"
                        android:gravity="top"
                        android:id="@+id/email_id"
                        android:layout_marginBottom="10dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Ration Card ID"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:focusable="false"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border"
                        android:gravity="top"
                        android:id="@+id/ration_card_no"
                        android:layout_marginBottom="10dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Pan Card No"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:focusable="false"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border"
                        android:gravity="top"
                        android:id="@+id/pan_card_no"
                        android:layout_marginBottom="10dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Nominee Name"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:focusable="false"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border"
                        android:gravity="top"
                        android:id="@+id/nominee_name"
                        android:layout_marginBottom="10dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Nominee Age"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:focusable="false"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border"
                        android:gravity="top"
                        android:id="@+id/nominee_age"
                        android:layout_marginBottom="10dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>

                    <com.jaiselrahman.hintspinner.HintSpinner
                        android:id="@+id/nominee_relation"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="40dp"
                            android:background="#ddd"
                            android:scaleType="fitXY"
                            android:id="@+id/member_photo_pr"
                            android:layout_gravity="center_vertical"

                            android:layout_height="40dp">

                        </ImageView>
                        <Button
                            android:layout_width="match_parent"
                            android:id="@+id/upload_picture_member"
                            android:text="Tap to upload member photo"
                            android:layout_height="50dp"></Button>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="40dp"
                            android:background="#ddd"
                            android:scaleType="fitXY"
                            android:id="@+id/member_pan_card"
                            android:layout_gravity="center_vertical"

                            android:layout_height="40dp">

                        </ImageView>
                        <Button
                            android:layout_width="match_parent"
                            android:id="@+id/upload_member_pan_card"
                            android:text="Tap to upload member pan card"
                            android:layout_height="50dp"></Button>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="40dp"
                            android:background="#ddd"
                            android:scaleType="fitXY"
                            android:id="@+id/member_adhar_card"
                            android:layout_gravity="center_vertical"

                            android:layout_height="40dp">

                        </ImageView>
                        <Button
                            android:layout_width="match_parent"
                            android:id="@+id/upload_member_adhar_card"
                            android:text="Tap to upload member aadhar card"
                            android:layout_height="50dp"></Button>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="40dp"
                            android:background="#ddd"
                            android:scaleType="fitXY"
                            android:id="@+id/member_other_proof"
                            android:layout_gravity="center_vertical"

                            android:layout_height="40dp">

                        </ImageView>
                        <Button
                            android:layout_width="match_parent"
                            android:id="@+id/upload_member_other_proof"
                            android:text="Tap to upload other proof"
                            android:layout_height="50dp"></Button>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="40dp"
                            android:background="#ddd"
                            android:scaleType="fitXY"
                            android:id="@+id/member_new_business_activity"
                            android:layout_gravity="center_vertical"

                            android:layout_height="40dp">

                        </ImageView>
                        <Button
                            android:layout_width="match_parent"
                            android:id="@+id/upload_member_new_business_activity"
                            android:text="Tap to upload new business activity"
                            android:layout_height="50dp"></Button>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="40dp"
                            android:background="#ddd"
                            android:scaleType="fitXY"
                            android:id="@+id/member_photo_signature"
                            android:layout_gravity="center_vertical"

                            android:layout_height="40dp">

                        </ImageView>
                        <Button
                            android:layout_width="match_parent"
                            android:id="@+id/upload_member_photo_signature"
                            android:text="Tap to upload member Signature photo"
                            android:layout_height="50dp"></Button>
                    </LinearLayout>
                    <com.jaiselrahman.hintspinner.HintSpinner
                        android:id="@+id/loan_purpose"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"

                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>








            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dp"
                    android:text="Back"
                    android:layout_weight="1"
                    android:padding="10dp"

                    android:background="#fff"
                    android:id="@+id/back"
                    android:textSize="18sp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="#F4511E"
                    android:layout_height="50dp"></Button>

                <Button
                    android:layout_width="0dp"
                    android:text="Save"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="#fff"
                    android:id="@+id/save"
                    android:textSize="18sp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="#F4511E"
                    android:layout_height="50dp"></Button>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>