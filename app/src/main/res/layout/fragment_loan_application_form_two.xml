<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/form_bg_color"
    tools:context=".Activites.GroupManager.Center.CreateCenterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cash Incoming"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#ffff"

                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#fff"
                app:cardMaxElevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_height="match_parent">



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Opening Balance"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/border"
                            android:layout_marginTop="10dp"
                            android:id="@+id/opening_bal"
                            android:gravity="top"
                            android:inputType="number"
                            android:padding="5dp"
                            android:layout_height="wrap_content">

                        </EditText>

                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Sale"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_marginTop="10dp"
                        android:id="@+id/sale_amount"
                        android:gravity="top"
                        android:padding="5dp"
                        android:inputType="number"
                        android:layout_height="wrap_content">

                    </EditText>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Asset Sale"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:focusable="false"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border"
                        android:gravity="top"
                        android:id="@+id/asset_sale"
                        android:inputType="number"
                        android:layout_marginBottom="10dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Debt of Receipts"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_marginTop="10dp"
                        android:id="@+id/deb_receipts"
                        android:gravity="top"
                        android:focusable="false"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Family Income"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_marginTop="10dp"
                        android:gravity="top"
                        android:id="@+id/family_income"
                        android:inputType="number"
                        android:focusable="false"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Other Income"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_marginTop="10dp"
                        android:gravity="top"
                        android:id="@+id/other_income"
                        android:focusable="false"
                        android:inputType="number"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Total Income Amount"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_marginTop="10dp"
                        android:id="@+id/total_income"
                        android:gravity="top"
                        android:focusable="false"
                        android:inputType="number"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>




                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cash Outgoing"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#ffff"

                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#fff"
                app:cardMaxElevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_height="match_parent">



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Purchase"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_marginTop="10dp"
                        android:id="@+id/purchase"
                        android:inputType="number"
                        android:gravity="top"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Accountant Fees"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_marginTop="10dp"
                        android:id="@+id/accountant_fees"
                        android:inputType="number"
                        android:gravity="top"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Solicitor Fees"
                        android:layout_marginTop="10dp"

                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:focusable="false"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border"
                        android:gravity="top"
                        android:id="@+id/solicitor_fees"
                        android:inputType="number"
                        android:layout_marginBottom="10dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Advertising And Marketing"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:focusable="false"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border"
                        android:gravity="top"
                        android:id="@+id/advertisement_and_marketing"
                        android:layout_marginBottom="10dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Bank Fees And Chareges"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_marginTop="10dp"
                        android:id="@+id/bank_charges"
                        android:gravity="top"
                        android:inputType="number"
                        android:focusable="false"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Interest paid"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_marginTop="10dp"
                        android:id="@+id/interest_paid"
                        android:inputType="number"
                        android:gravity="top"

                        android:focusable="false"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Credit Card Fees"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_marginTop="10dp"
                        android:id="@+id/credit_card_fees"

                        android:gravity="top"
                        android:inputType="number"
                        android:maxLength="6"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Utilities"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_marginTop="10dp"
                        android:gravity="top"
                        android:id="@+id/utilities"
                        android:inputType="number"
                        android:maxLength="6"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Lease OR Loan Payments"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_marginTop="10dp"
                        android:gravity="top"
                        android:id="@+id/Loan"
                        android:inputType="number"
                        android:maxLength="6"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Rent and rates"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_marginTop="10dp"
                        android:gravity="top"
                        android:id="@+id/rents_rates"
                        android:inputType="number"
                        android:maxLength="6"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Motor Vehicle Expenses"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_marginTop="10dp"
                        android:gravity="top"
                        android:id="@+id/motor_vehicle_ex"
                        android:inputType="number"
                        android:maxLength="6"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Repair and Maintenance"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_marginTop="10dp"
                        android:gravity="top"
                        android:id="@+id/repair_maintenance"
                        android:inputType="number"
                        android:maxLength="6"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Stationary and Printing"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_marginTop="10dp"
                        android:gravity="top"
                        android:id="@+id/stationary_printing"
                        android:inputType="number"
                        android:maxLength="6"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Licensing"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_marginTop="10dp"
                        android:gravity="top"

                        android:id="@+id/licensing"
                        android:inputType="number"
                        android:maxLength="6"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Income Tax"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_marginTop="10dp"
                        android:gravity="top"
                        android:id="@+id/income_tax"
                        android:inputType="number"
                        android:maxLength="6"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enter Wages"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_marginTop="10dp"
                        android:gravity="top"
                        android:id="@+id/wages"
                        android:inputType="number"
                        android:maxLength="6"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Total Outgoing Amount"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_marginTop="10dp"
                        android:gravity="top"
                        android:id="@+id/outgoing_amount"
                        android:inputType="number"
                        android:maxLength="6"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Current Balance"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_marginTop="10dp"
                        android:gravity="top"
                        android:id="@+id/current_bal"
                        android:inputType="number"
                        android:maxLength="6"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                    </EditText>

                </LinearLayout>

            </androidx.cardview.widget.CardView>






            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dp"
                    android:text="Back"
                    android:layout_weight="1"
                    android:padding="10dp"

                    android:background="#fff"
                    android:id="@+id/back"
                    android:textSize="18sp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="#F4511E"
                    android:layout_height="50dp"></Button>

                <Button
                    android:layout_width="0dp"
                    android:text="Next"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="#fff"
                    android:id="@+id/next"
                    android:textSize="18sp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="#F4511E"
                    android:layout_height="50dp"></Button>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>