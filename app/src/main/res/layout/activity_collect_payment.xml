<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activites.GroupManager.collection.CollectPayment">
    <TextView
        android:layout_width="match_parent"
        android:background="#ddd"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_margin="5dp"
        android:padding="3dp"
        android:text="Member Information"
        android:layout_height="wrap_content"></TextView>
   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_margin="5dp"
       android:layout_height="wrap_content">

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="100dp"
               android:background="#ddd"
               android:layout_margin="5dp"
               android:layout_height="100dp">
               <ImageView
                   android:layout_width="match_parent"
                   android:id="@+id/profile_image"
                   android:scaleType="fitXY"
                   android:layout_height="match_parent"></ImageView>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_margin="5dp"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:text="Name"
                       android:textColor="#000"
                       android:layout_height="wrap_content"></TextView>

                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="3"
                       android:id="@+id/applicant_name"
                       android:text="Chetan chuble"
                       android:layout_height="wrap_content"></TextView>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:text="Email"
                       android:textColor="#000"
                       android:layout_height="wrap_content"></TextView>

                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="3"
                       android:id="@+id/applicant_email"
                       android:text="chumblechetan@gmail.com"
                       android:layout_height="wrap_content"></TextView>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:text="Phone"
                       android:textColor="#000"
                       android:layout_height="wrap_content"></TextView>

                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="3"
                       android:id="@+id/applicant_no"
                       android:text="8149382548"
                       android:layout_height="wrap_content"></TextView>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:text="Address"
                       android:textColor="#000"
                       android:layout_height="wrap_content"></TextView>

                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="3"
                       android:id="@+id/applicant_add"
                       android:text="Auranagabad Hospital near head post office "
                       android:layout_height="wrap_content"></TextView>

               </LinearLayout>


           </LinearLayout>

       </LinearLayout>
   </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:background="#ddd"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_margin="5dp"
        android:padding="3dp"
        android:text="Loan Application Information"
        android:layout_height="wrap_content"></TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:text="Application No"
                        android:layout_height="wrap_content"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:id="@+id/loan_no"
                        android:text="001154751457"
                        android:layout_height="wrap_content"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:text="Bank Name"
                        android:layout_height="wrap_content"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:id="@+id/bank_name"
                        android:text="Auranagabad"
                        android:layout_height="wrap_content"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:text="Area Name"
                        android:layout_height="wrap_content"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:id="@+id/area_name"
                        android:text="Auranagabad"
                        android:layout_height="wrap_content"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:text="Branch Name"
                        android:layout_height="wrap_content"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:text="Auranagabad"
                        android:id="@+id/branch_name"
                        android:layout_height="wrap_content"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="#000"

                        android:text="Center Name"
                        android:layout_height="wrap_content"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:id="@+id/center_name"
                        android:text="C1"
                        android:layout_height="wrap_content"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Group Name"

                        android:textColor="#000"
                        android:layout_height="wrap_content"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:text="G1"
                        android:id="@+id/group_name"
                        android:layout_height="wrap_content"></TextView>

                </LinearLayout>




            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:background="#ddd"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_margin="5dp"
        android:padding="3dp"
        android:text="EMI Collection Information"
        android:layout_height="wrap_content"></TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:text="Loan Amount"
                        android:layout_height="wrap_content"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:id="@+id/loan_amount"
                        android:text="40000"
                        android:layout_height="wrap_content"></TextView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:text="Monthly EMI"

                        android:layout_height="wrap_content"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:text="Auranagabad"
                        android:id="@+id/monthly_emi"
                        android:layout_height="wrap_content"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:text="EMI Date"

                        android:layout_height="wrap_content"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:id="@+id/emi_date"
                        android:text="2134"
                        android:layout_height="wrap_content"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:text="Opening Bal"
                        android:layout_height="wrap_content"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:text="2134"
                        android:id="@+id/op_bal"
                        android:layout_height="wrap_content"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Closing Bal"
                        android:textColor="#000"
                        android:layout_height="wrap_content"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:id="@+id/closing_bal"
                        android:text="2134"
                        android:layout_height="wrap_content"></TextView>

                </LinearLayout>




            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:background="#ddd"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_margin="5dp"
        android:padding="3dp"
        android:text="EMI Payment Information"
        android:layout_height="wrap_content"></TextView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:background="#FFC107"
                    android:text="EMI No 1"
                    android:id="@+id/emi_no"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:padding="8dp"
                    android:layout_height="35dp"></TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="#4CAF50"
                    android:text="RS.2134"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:id="@+id/emi_lbl"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:padding="8dp"
                    android:layout_height="35dp"></TextView>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:background="@drawable/border"
                    android:hint="Enter Amount"
                    android:id="@+id/get_emi"
                    android:inputType="numberDecimal"
                    android:padding="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_height="35dp"></EditText>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="#3F51B5"
                    android:text="SUBMIT"
                    android:id="@+id/submit_emi"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:padding="8dp"
                    android:layout_height="35dp"></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Payment Status"
                    android:layout_height="wrap_content"></TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/payment_status"
                    android:text="Pending"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Payment Date"
                    android:layout_height="wrap_content"></TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/payment_date"
                    android:text="24-06-2021"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>